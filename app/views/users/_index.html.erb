<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>Following：<%= user.follower.count %></td>
        <td>Follower：<%= user.followed.count %></td>
        <% if current_user.following?(user) %>
        <td><%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %></td>
        <% else %>
        <td><%= link_to "Follow", user_relationships_path(user.id), method: :post %></td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
